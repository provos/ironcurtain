{
  "name": "@provos/ironcurtain",
  "version": "0.5.1",
  "type": "module",
  "description": "Secure agent runtime with trusted process mediation",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "author": "Niels Provos",
  "repository": {
    "type": "git",
    "url": "https://github.com/provos/ironcurtain.git"
  },
  "bugs": {
    "url": "https://github.com/provos/ironcurtain/issues"
  },
  "homepage": "https://github.com/provos/ironcurtain#readme",
  "keywords": [
    "mcp",
    "agent",
    "security",
    "sandbox",
    "policy",
    "trusted-process",
    "model-context-protocol"
  ],
  "engines": {
    "node": ">=22.0.0 <26"
  },
  "bin": {
    "ironcurtain": "dist/cli.js"
  },
  "main": "dist/index.js",
  "files": [
    "dist/",
    "docker/",
    "src/config/constitution.md",
    "src/config/constitution-user-base.md",
    "src/config/mcp-servers.json",
    "src/config/generated/compiled-policy.json",
    "src/config/generated/tool-annotations.json",
    "src/config/generated/test-scenarios.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && node scripts/copy-assets.mjs",
    "start": "tsx src/cli.ts start",
    "annotate-tools": "tsx src/cli.ts annotate-tools",
    "compile-policy": "tsx src/cli.ts compile-policy",
    "customize-policy": "tsx src/cli.ts customize-policy",
    "bot": "tsx src/cli.ts bot",
    "config": "tsx src/cli.ts config",
    "setup": "tsx src/cli.ts setup",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/ test/",
    "format": "prettier --log-level=warn --write 'src/**/*.ts' 'test/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'test/**/*.ts'",
    "pre-commit": "lint-staged",
    "setup-hooks": "cp .hooks/pre-commit .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit && echo 'Pre-commit hook installed.'"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.49",
    "@ai-sdk/google": "^3.0.33",
    "@ai-sdk/openai": "^3.0.36",
    "@anthropic-ai/sandbox-runtime": "^0.0.39",
    "@clack/prompts": "^1.0.1",
    "@cyanheads/git-mcp-server": "^2.8.4",
    "@modelcontextprotocol/sdk": "^1.27.1",
    "@mozilla/readability": "^0.6.0",
    "@utcp/code-mode": "^1.2.11",
    "@utcp/mcp": "^1.1.1",
    "ai": "^6.0.104",
    "chalk": "^5.6.2",
    "cli-highlight": "^2.1.11",
    "dotenv": "^17.3.1",
    "jsdom": "^28.1.0",
    "marked": "^17.0.3",
    "marked-terminal": "^7.3.0",
    "node-forge": "^1.3.3",
    "ora": "^9.3.0",
    "shell-quote": "^1.8.3",
    "turndown": "^7.2.2",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  },
  "overrides": {
    "minimatch": "^10.2.1"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --check",
      "eslint"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/jsdom": "^28.0.0",
    "@types/node": "^25.3.0",
    "@types/node-forge": "^1.3.14",
    "@types/shell-quote": "^1.7.5",
    "@types/turndown": "^5.0.6",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.1.8",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18",
    "ws": "^8.19.0"
  }
}
